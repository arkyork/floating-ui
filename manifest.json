{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Floating Ui",
  "version": "0.4.0",
  "description": "ChatGPT上に浮かぶUIでプロンプト保存・呼び出し。CSV import/export対応。最小化・位置保存あり。",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["csv.js", "store.js", "composer.js", "ui.js", "content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ]
}
